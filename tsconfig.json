{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "noImplicitAny": false,
        "outDir": "./dist",
        "typeRoots": [
            "./src/interfaces"
        ],
        "baseUrl": "src",
        "paths": {}
    },
    "filesGlob": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "admin",
        "client",
        "node_modules",
    ]
}